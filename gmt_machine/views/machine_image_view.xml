<odoo>
            <!-- FORM VIEW OF MACHINE -->
            <record id="machine_image_form_view" model="ir.ui.view">
                <field name="name">machine.image.from.view</field>
                <field name="model">machine.image</field>
                <field name="arch" type="xml">
                    <form string='GMT Machines'>
                        <sheet>
                            <field name="image_medium" widget="image" class="oe_avatar"/>
                            <group col="2">
                                <field name="machine_id"  options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="description"/>
                            </group>
                        </sheet>
                   </form>
                </field>
            </record>
            
            <!-- TREE VIEW OF MACHINE -->
            <record model="ir.ui.view" id="machine_image_tree_view">
                <field name="name">machine.image.tree.view</field>
                <field name="model">machine.image</field>
                <field name="arch" type="xml">
                    <tree string='GMT Machines'>
                        <field name="machine_id"/>
                        <field name="description"/>
                    </tree>
                </field>
            </record> 
            
            <!-- KANBAN VIEW OF MACHINE -->
            <record id="machine_image_kanban" model="ir.ui.view">
            <field name="name">machine.image.kanban.view</field>
            <field name="model">machine.image</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                      <field name="machine_id"/>
                      <field name="description"/>
                      <field name="image_medium" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                      <templates>
                          <t t-name="kanban-box">
                              <div t-attf-class="oe_kanban_global_click">
                                  <div class="o_kanban_image">                
                                          <img alt="image_medium" t-if="record.image_medium.raw_value" t-att-src="'data:image_medium/png;base64,'+record.image_medium.raw_value"/>
                                  </div>
                                  <div class="oe_kanban_details">
                                      <div t-if="record.machine_id.value">
                                          <t t-esc="record.machine_id.value"/>
                                      </div>
                                      <div t-if="record.description.value">
                                          <t t-esc="record.description.value"/>
                                      </div>
                                  </div>
                              </div>
                          </t>
                      </templates>
                 </kanban>
              </field>
            </record>
            
            <!-- ACTION VIEW OF MACHINE -->
            <record id="action_gmt_machine_image" model="ir.actions.act_window">
                <field name="name">GMT Machines</field>
                <field name="res_model">machine.image</field>
                <field name="view_type">form</field>
                <field name="view_mode">kanban,tree,form</field>
            </record>
            
            <!-- MENU -->
            <menuitem id="machine_image_child_menu" parent="machine_parent_menu" sequence="12" name="Machines"/>
            <menuitem id="machine_image_child_menu1" parent="machine_image_child_menu" name="Machines Informaiton" sequence="121" action="action_gmt_machine_image"/>
            
</odoo>